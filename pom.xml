	<groupId>hudson.plugins.chainreactorclient</groupId>
	<artifactId>chainreactorclient</artifactId>
	<version>0.2-SNAPSHOT</version>
	<packaging>hpi</packaging>
	<name>Chain Reactor Client</name>
	<url>http://wiki.jenkins-ci.org/display/JENKINS/Chain+Reactor+Client+Plugin</url>

	<scm>
		<connection>scm:git:ssh://github.com/joonty/jenkins-chain-reactor-client.git</connection>
		<developerConnection>scm:git:ssh://git@github.com/joonty/jenkins-chain-reactor-client.git</developerConnection>
		<url>https://github.com/joonty/jenkins-chain-reactor-client</url>
	</scm>

	<properties>
