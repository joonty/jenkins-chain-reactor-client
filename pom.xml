		<hudson.version>${project.parent.version}</hudson.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.net.id>joonty</java.net.id>
	</properties>

	<developers>
		<developer>
			<id>joonty</id>
			<email>jon@joncairns.com</email>
			<name>Jon Cairns</name>
			<timezone>0</timezone>
